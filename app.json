{
  "name": "BI:Radix Platform 2",
  "env": {
    "SEED_DEMO": {
      "value": "1"
    },
    "mode": {
      "value": "production"
    },
    "EXCEL_URL": {
      "value": "http://biradixsheets.apphb.com/excel"
    }
  },
  "scripts": {
    "postdeploy": "echo $HEROKU_APP_NAME"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "Standard-1X"
    }
  },
  "addons": [
    "cloudamqp:lemur",
    "mongolab:shared-single-small",
    "sendgrid:starter",
    "heroku-redis:hobby-dev",
    "raygun:intro"
  ],
  "buildpacks": [
    {
      "url": "http://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
    }
  ]
}